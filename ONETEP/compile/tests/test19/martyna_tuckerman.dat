!=========================================================!
! Input for calculation with the ONETEP program           !
!                                                         !
! Quality Control file for:                               ! 
! Martyna-Tuckerman (MT) correction to the effects of PBC !
! as described in [1], applied to                         !
! 1-methylpiperidin-1-ium, C6H14N                         !
!                                                         !
! Created by S. Fox and J. Dziedzic on 01/02/2010         !
!                                                         !
! School of Chemistry                                     !
! University of Southampton                               !
! Highfield                                               !
! Southampton SO17 1BJ                                    ! 
! UK                                                      !
!                                                         !
! [1] Martyna, Tuckerman, 1999 J. Chem. Phys. 110, 2810.  !
!=========================================================!

 write_forces T

 ! The MT correction works best with substantially higher cutoffs.
 ! Here, the cutoff is lowered to reduce memory requirements.
 cutoff_energy         : 600 eV
 kernel_cutoff         : 1000

 ! This turns on the correction
 pbc_correction_cutoff : 7.0

 print_qc              : T
 output_detail         : VERBOSE
 timings_level         : 0
 write_denskern        : F
 write_tightbox_ngwfs  : F

 charge                : 1

 elec_cg_max           : 0
 occ_mix               : 1.0

 xc_functional         : PBE
 maxit_ngwf_cg         : 3

 ! This molecule is longest along the Y direction with 9.602 bohr.
 ! With the radii of the NGWF included, this gives 23.602 bohr.
 ! The MT correction assumes that the box is (at least) twice that,
 ! hence 48.0 is a safe value.

 %block lattice_cart
  48.000   0.000   0.000
   0.000  48.000   0.000
   0.000   0.000  48.000
 %endblock lattice_cart

