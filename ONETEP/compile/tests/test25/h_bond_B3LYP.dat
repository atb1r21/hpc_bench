! jd: Switch to OBCs
coulomb_cutoff_type SPHERE
coulomb_cutoff_radius 40.0
hfx_bc O O O

! Use a rather crude Chebyshev interpolation
! and 3Dc V-matrix evaluation scheme
%block swri
  for_hfx 2 8 V 8 8 WE3
%endblock swri

%block species_swri-for_hfx
O
C
H
%endblock species_swri-for_hfx

hfx_use_ri for_hfx
hfx_max_l 2 ! } use a rather crude expansion
hfx_max_q 8 ! } to make this run quickly 
hfx_metric ELECTROSTATIC

cutoff_energy        : 800 eV
output_detail        : VERBOSE
write_denskern       : F
write_tightbox_ngwfs : F
print_qc             : T
xc_functional        : B3LYP
maxit_ngwf_cg        : 1
maxit_lnv            : 2
minit_lnv            : 2
maxit_pen            : 0

%block   lattice_cart
  30.00     0.00     0.00
   0.00    25.00     0.00
   0.00     0.00    25.00
%endblock  lattice_cart


%block  positions_abs  
