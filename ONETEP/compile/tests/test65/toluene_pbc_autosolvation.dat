!=========================================================!
! Input for calculation with the ONETEP program           !
!                                                         !
! Quality Control file for:                               !
! Implicit solvent (with a fixed cavity) for a neutral    !
! molecule (toluene) with periodic BCs. The molecule is   !
! positioned straddling the origin of the simulation cell !
! in order to test that periodic BCs are correctly        !
! implemented. A full autosolvation calculation for the   !
! molecule immersed in H2O is performed.                  !
!                                                         !
! The structure of toluene is originally from the         !
! Minnesota solvation database, v2009 (0036tol.xyz) and   !
! has been shifted so the centre of the molecule is       !
! positioned at the origin of the cell.                   !
!                                                         !
! Minnesota solvation database, v2009:                    !
!   A.V. Marenich, C.P. Kelly, J.D. Thompson,             !
!   G.D. Hawkins, C.C. Chambers, D.J. Giesen,             !
!   P. Winget, C.J. Cramer, and D.G. Truhlar,             !
!   Minnesota Solvation Database - Version 2009           !
!   (University of Minnesota, Minneapolis, 2009).         !
!                                                         !
!   A.V. Marenich, C.J. Cramer, and D.G. Truhlar,         !
!   J. Phys. Chem. B 113, 6378 (2009).                    !
!                                                         !
! Created by J. C. Womack on 20/09/2017.                  !
!                                                         !
! Department of Chemistry                                 !
! University of Southampton                               !
! Highfield                                               !
! Southampton SO17 1BJ                                    !
! UK                                                      !
!                                                         !
!=========================================================!

cutoff_energy: 800 eV
xc_functional: PBE

print_qc: TRUE
output_detail: VERBOSE
maxit_lnv: 5
maxit_ngwf_cg: 5
write_denskern       : FALSE
write_tightbox_ngwfs : FALSE
write_xyz            : FALSE
do_properties        : FALSE

! Boundary condition specification
multigrid_bc:   P P P
ion_ion_bc:     P P P
pspot_bc:       P P P
smeared_ion_bc: P P P

mg_defco_fd_order 8

! Solvent model settings
!is_discretization_order: 8
is_implicit_solvent:     TRUE
is_autosolvation:        TRUE
is_include_apolar:       TRUE
is_dielectric_model:     FIX_INITIAL
is_bulk_permittivity:    78.54                ! ONETEP default, water
is_solvent_surf_tension: 4.7624D-5 ha/bohr**2 ! ONETEP default, water
is_density_threshold:    0.00035              ! ONETEP default, "low beta"
is_solvation_beta:       1.3                  ! ONETEP default, "low beta"

%block lattice_cart
ang
20.0  0.0  0.0
 0.0 20.0  0.0
 0.0  0.0 20.0
%endblock lattice_cart

