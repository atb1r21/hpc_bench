task                : MOLECULARDYNAMICS
md_delta_t          : 0.5 fs
md_num_iter         : 6
md_restart          : F
md_reset_history    : 100

rand_seed:          : 42
maxit_lnv           : 8
lnv_threshold_orig  : 1E-5
md_lnv_threshold    : 1E-4
md_aux_rep          : asym
md_aux_dkn_t        : 1E-5
md_aux_beren_tc     : 0.1 ps
mix_dkn_init_type   : NONE
mix_dkn_init_num    : 4
mix_dkn_type        : XLIS
mix_dkn_reset       : 100

maxit_ngwf_cg       : 0

cutoff_energy       : 400 eV
xc_functional       : PBE
print_qc            : TRUE

%block thermostat
0 6 none 300 K
%endblock thermostat

%block species
O      O    8    4   7.00
H      H    1    1   7.00
%endblock species

%block species_pot
H "../../pseudo/hydrogen.recpot"
O "../../pseudo/oxygen.recpot"
%endblock species_pot

%block species_atomic_set
O "SOLVE"
H "SOLVE"
%endblock species_atomic_set

%block lattice_cart
