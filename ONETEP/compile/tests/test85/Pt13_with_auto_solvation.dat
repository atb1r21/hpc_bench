! Created by J. Dziedzic on 29/12/2020.                   !
!                                                         !
! School of Chemistry                                     !
! University of Southampton                               !
! Highfield                                               !
! Southampton SO17 1BJ                                    !
! UK                                                      !
!                                                         !
!=========================================================!

 is_auto_solvation T

 print_qc T
 write_xyz F
 output_detail VERBOSE
 timings_level 3

 charge 0
 cutoff_energy 700 eV
 xc_functional PBE

 maxit_palser_mano 100
 maxit_pen 0
 edft T
 edft_smearing_width 0.1 eV
 edft_maxit 3
 edft_free_energy_thres 1.0e-3
 edft_rms_gradient_thres 1.0e-3
 edft_commutator_thres 1.0e-3

 maxit_ngwf_cg 1
 k_zero 3.0

 %block species
  Pt Pt 78 6 6.0
 %endblock species

 %block species_atomic_set
 Pt "SOLVE"
 %endblock species_atomic_set

 %block species_pot
 Pt "../../pseudo/platinum.recpot"
 %endblock species_pot

 %block lattice_cart
